<p style="color: green"><%= notice %></p>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Twitter</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @friends.each do |friend| %>

            <% if friend.user_id == current_user.id %>
                <tr>
                <td><%= friend.f_name %></td>
                <td><%= friend.l_name %></td>
                <td><%= friend.email %></td>
                <td><%= friend.phone %></td>
                <td><%= friend.twt %></td>

                <td>
                <%= link_to "Show", friend %>
                </td>
                <td><%= link_to "Edit", edit_friend_path(friend) %></td>
                <td><%= link_to "Destroy", friend, method: :delete, data:{confrim: 'Are you sure? '} %> </td>
                </tr> 
            <% end %>
        <% end %>
        
    </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
